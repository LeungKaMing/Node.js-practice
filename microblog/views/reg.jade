extends layout

block content
    div.container
        div.row
            div.form-center
                form.form-horizontal(method='post')
                    fieldset
                        legend
                            h3.text-center 用户注册
                        div.form-group
                            label.col-md-3.control-label(for='username') 用户名
                            div.col-md-9
                                input.form-control(type="text" id='username' name='username' required)
                        div.form-group
                            label.col-md-3.control-label(for='password') 密码
                            div.col-md-9
                                input.form-control(type='password' id='password' name='password' required)
                        div.form-group
                            label.col-md-3.control-label(for='password') 再次输入密码
                            div.col-md-9
                                input.form-control(type='password' id='password1' name='password1' required)
                        div.form-actions
                            button.btn.btn-primary.btn-lg#reg1(type='submit') 注册          
