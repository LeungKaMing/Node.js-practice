extends layout

block content
        div.container
        div.row
            div.form-center
                form.form-horizontal(method='post')
                    fieldset
                        legend
                            h3.text-center 用户登录
                        div.form-group
                            label.col-md-3.control-label(for='username') 用户名
                            div.col-md-9
                                input.form-control(type="text" id='username' name='username')
                        div.form-group
                            label.col-md-3.control-label(for='password') 密码
                            div.col-md-9
                                input.form-control(type='password' id='password' name='password')
                        div.form-actions
                            button#login0.btn.btn-primary.btn-lg(type='submit') 登录        
